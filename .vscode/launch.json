{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_WARN_EVALUATION_TIMEOUT": "30" // Sets timeout to 30 seconds
            },
            "args": [
                "--config",
                "simon.ini",
                "--verbose"
            ]
        }
    ]
}